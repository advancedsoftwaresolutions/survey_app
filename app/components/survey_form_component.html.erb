<!-- app/components/survey_form_component.html.erb -->
<div class="container mt-5">
  <%= render PageHeaderComponent.new(
    title: "Create a New Survey",
    link_text: "Back to Surveys",
    link_path: surveys_path
  ) %>
  <div class="card-wrapper animate-soft-lift">
    <div class="glassmorphic shadow-sm p-3 p-md-4 mb-4" >
      <div class="card-header bg-transparent border-0 text-center text-md-start">
      </div>
      <div class="card-body">
        <%= form_with(model: @survey, local: true, data: { turbo: false }) do |form| %>
          <div class="mb-3">
            <%= form.label :question, class: "form-label" %>
            <%= form.text_field :question, class: "form-control", placeholder: "Enter your yes/no question..." %>
          </div>
          <div class="text-center text-md-end">
            <%= form.submit "Create Survey", class: "btn btn-outline-primary btn-sm px-4" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
