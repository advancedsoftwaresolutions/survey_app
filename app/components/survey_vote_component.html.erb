<!-- app/components/survey_vote_component.html.erb -->
<div class="position-relative">
  <div class="card-wrapper animate-soft-lift">
    <div class="glassmorphic shadow-sm p-3 p-md-4 gap-3 h-100">
      <div class="card-header bg-transparent border-0">
        <h5 class="mb-5 text-center text-md-start">Survey</h5>
      </div>
      <div class="card-body h-100 text-center d-flex flex-column gap-3 px-2">
        <h5 class="mb-3 fs-5 fs-md-4"><%= @survey.question %></h5>
        <div class="d-flex flex-column flex-sm-row justify-content-center gap-4 w-100">
          <%= form_with model: [@survey, Response.new], local: true, data: { turbo: false } do |form| %>
            <%= form.hidden_field :answer, value: true %>
            <%= form.submit "Yes", class: "btn btn-outline-success btn-lg w-100 px-4 fw-semibold" %>
          <% end %>
          <%= form_with model: [@survey, Response.new], local: true, data: { turbo: false } do |form| %>
            <%= form.hidden_field :answer, value: false %>
            <%= form.submit "No", class: "btn btn-outline-danger btn-lg w-100 px-4 fw-semibold" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>